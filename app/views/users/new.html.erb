<h1>Register</h1>

<%= form_with url: '/users', method: :post, local: true do |f| %>
<%= f.label :name, "Name" %>
<%= f.text_field :name %>
<br>
<%= f.label :email, "Email" %>
<%= f.text_field :email %>
<br>
<%= f.label :password, "Password" %>
<%= f.text_field :password %>
<br>
<%= f.label :password_confirmation, "Password Confirmation" %>
<%= f.text_field :password_confirmation %>
<br>
<br>
<%= f.button 'Register' %>
<% end  %>
